{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "moduleResolution": "node",
    "target": "ES5",
    "lib": [
      "DOM",
      "ES6",
      "ES2015",
      "ES2019",
    ],
    "module": "ESNext",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "spec"
  ]
}